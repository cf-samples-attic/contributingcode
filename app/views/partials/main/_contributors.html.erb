<div class="contributors content_pos">
  <%-if @users.count > 0 %>
      <h2>Students who have signed up so far</h2>
    <div id="contributorsCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item">
          <%-@users.each_with_index do |user, index| %>
              <div class="row" style="margin-left: 100px; margin-right:100px">
                <div class= "span2 <%-index == 0 ? 'offset2':'' %>">
                  <img src = "<%=user.avatar%>">
                  <a href="http://github.com/<%= user.handle %>">
                  <span class="small"><%=  user.name %></span>
                 </a>
                </div>
              </div>
          <%-end%>
        </div>
      </div>
      <div class="row">
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>
    </div>
  <% end %>
</div>