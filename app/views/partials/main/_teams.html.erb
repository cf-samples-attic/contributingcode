<div class="teams content_pos">
<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    <div class="active item">
      <div class="row">
        <div class="span3 offset3">
          <h1> Teams </h1>
        </div>
      </div>
    </div>
    <% @teams.each do |team| %>
      <div class="item">
        <div class="row">
          <div class= "span4 offset2" >
            <h1><%= team.name %></h1>
            <img src = "/assets/avatar_team.gif">
            <%= team.desc %>
          </div>
          <div class= "span4">
            <div class = "row">
              <div class ="span2">
                <img src = "/assets/avatar_user.gif">
              </div>
              <div class ="span2">
                <img src = "/assets/avatar_user.gif">
              </div>
            </div>
            <br>
            <br>
            <div class = "row">
              <div class ="span2">
                <img src = "/assets/avatar_user.gif">
              </div>
              <div class ="span2">
                <img src = "/assets/avatar_user.gif">
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
</div>