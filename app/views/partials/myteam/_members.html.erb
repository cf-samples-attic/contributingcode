<div class="general members" id="a1">
  <h2>Team Members</h2>
  <% i = 0 %>
  <%- [0,1].each do |row| %>
    <div class = "row <%= row == 1 ? 'space_top' : '' %>">
      <%- [0, 1].each do |col| %>
          <% i= i+1 %>
          <div class="span4">
            <% if @team_members.length >= i %>
              <% member = @team_members[(2*row) + col] %>
              <img class='avatar' src="<%= @members[member.user_id].avatar %>"><a href='<%= get_url(member.user_handle) %>'><%= member.user_handle %></a>  <a  href='<%= team_member_path(member.user_id) %>' class='btn removeMember'> Remove member</a>
              <% else %>
                <img class='avatar' src = "/assets/avatar_user.gif">
              <% end %>
          </div>
        <%- end %>
    </div>
  <%-end%>
</div>