<%-if current_user and @add_reqs %>
<a class="btn" data-toggle="modal" href="#addReqModal" >Pending Requests <%= @add_reqs.length %></a>
<div class="modal hide" id="addReqModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Accept to join a team or Decline</h3>
  </div>
  <div class="modal-body">
    <ul>
    <% @add_reqs.each do |req| %>
        <li><h3><%= req.team_name %></h3>
        <a href='<%= accept_add_path(req.team_id) %>' class="btn addReq">Accept</a>
        <a href='<%= decline_add_path(req.team_id) %>' class="btn addReq">Decline</a>
        </li>
    <% end %>
  </ul>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>
<%-end%>