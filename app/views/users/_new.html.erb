<div class="modal hide" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Please Complete the form to finish the registraion </h3>
  </div>
  <div class="modal-body">
    <img src='<%= @avatar %>'>
    <p> Github handle : <%= @handle %> </p>
    <%= form_tag users_path , :class => "formset",  :name => "register_form", :id=>"register_form", :method => "post" %>
  
    <div class="control-group">
      <%= label_tag :FirstName, nil, :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag(:name,@name, :"data-rules"=> "required",  :"data-name" =>"name", :class => "validate input-xlarge") %>
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :Email, nil, :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag(:email,@email, :class => "validate input-xlarge", :"data-rules"=> "required|valid_email", :"data-display"=>"Email", :"data-name" =>"email" ) %>
        <p class="help-block"></p>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <div class="clearfix">
      <div class="input">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <%= submit_tag "Save", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>