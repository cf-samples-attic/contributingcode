<div class="modal hide" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Please Complete the form to finish the registration </h3>
  </div>
  <div class="modal-body" style="height:500px;">
    <%= form_tag users_path , :class => "formset",  :name => "register_form", :id=>"register_form", :method => "post" %>

    <div class="control-group">
      Github : <a class="small-avatar" href="http://github.com/<%= @handle %>" target="_blank"><%= @handle %></a>
      <div class="controls">
        <a href="http://github.com/<%= @handle %>" target="_blank"><img src='<%= @avatar %>'></a>
       </div>
    </div>
    <br/>
    <div class="control-group">
      <%= label_tag :FirstName, "Name", :class => "control-label blue" %>
      <div class="controls">
        <%= text_field_tag(:name,@name, :"data-rules"=> "required|max_length[12]",  :"data-name" =>"name", :class => "validate input-xlarge") %>
        <p class="help-block">Please fill out your full name.</p>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :Email, nil, :class => "control-label blue" %>
      <div class="controls">
        <%= text_field_tag(:email,@email, :class => "validate input-xlarge", :"data-rules"=> "required|valid_email", :"data-display"=>"Email", :"data-name" =>"email" ) %>
        <p class="help-block">Email will only be used for the sprint.</p>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <p class="blue"> Choose your Shirt size</p>
        <ul style="list-style-type: none;"><li><%= radio_button_tag(:tee, "S") %> S</li>
        <li><%= radio_button_tag(:tee, "M")%> M</li>
        <li><%= radio_button_tag(:tee, "L") %> L</li>
        <li><%= radio_button_tag(:tee, "XL") %> XL</li>
        <li><%= radio_button_tag(:tee, "XXL") %> XXL</li>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <div class="clearfix">
      <div class="input">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <%= submit_tag "Register", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>